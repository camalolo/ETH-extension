{
  "manifest_version": 3,
  "name": "Eth Gas Price",
  "version": "1.0",
  "description": "A Chrome extension that displays the current Eth fees for slow confirmation on the icon.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon48.png",
    "default_title": "Ethereum Fees"
  },
  "permissions": ["storage", "alarms", "action"],
  "host_permissions": ["https://ethgasprice.org/*"],
  "background": {
    "service_worker": "background.js"
  }
}